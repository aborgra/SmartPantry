@model SmartPantry.Models.ViewModels.FoodItemFormViewModel

@{
    ViewData["Title"] = "Details";
}

<br/>

<div>
    <h4> @Html.DisplayFor(model => model.FoodItemName)</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Quantity)
            @if (Model.Quantity != 1)
            {
                @Model.QuantityUnit.Name <text>s</text>;
            }
            else
            {
                @Model.QuantityUnit.Name
            }
        </dd>
        @if(Model.Threshold > 0)
        {
        <dt class = "col-sm-2">
            Low Quantity Alert
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Threshold)
            @if (Model.Threshold != 1 && Model.QuantityUnit.Name != "other")
            {
                @Model.QuantityUnit.Name <text>s</text>;
            }
            else
            {
                @Model.QuantityUnit.Name
            }
        </dd>
        }
        <dt class = "col-sm-2">
            Category
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.FoodId }, new {@class = "btn btn-link" }) |
    @Html.ActionLink("Delete", "Delete", new {  id=Model.FoodId }, new { @class = "btn btn-link" }) | 

    <a class = "btn btn-link" asp-action="Index">Back to List</a>
</div>
