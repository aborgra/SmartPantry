@model IEnumerable<SmartPantry.Models.GroceryListFood>

@{
    ViewData["Title"] = "Index";
}
<br/>
<h1>My Grocery List</h1>
<div class="indexOptionsContainer">
    <a asp-action="Create">Add Item</a>
    <form asp-controller="GroceryList" asp-action="Index" class="form-inline my-2 my-lg-0">
        <input class="form-control mr-sm-2" type="text" placeholder="Search Item" name="searchString">
        <button class="btn btn-primary my-2 my-sm-0" type="submit">Search</button>
    </form>
    <a asp-action="Index"> Show All</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
            Purchase
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Food.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td >
                <div class="form-group">
                    <div class="custom-control custom-checkbox">
                        <input type="checkbox" asp-action="Purchase" class="custom-control-input" id="@item.Id" name="@item.Id" value="false">
                        <label class="custom-control-label" name="@item.Id" for="@item.Id"></label>
                    </div>
                </div>
            </td>
                <td>
                    @Html.ActionLink(item.Food.Name, "Details", new { id = item.Id }, new { @class = "btn btn-link" })
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Food.Category.Name)
                </td>
                <td>
                    <div class="quantityButtonContainer">
                        @Html.DisplayFor(modelItem => item.Quantity)
                        @using (Html.BeginForm("QuantityUp", "Pantry"))
                        {
                            <div class="quantityAdjustButton">
                                <input asp-for="@item.Id" type="hidden" value="@item.Id" name="id" class="form-control" />
                                <input type="submit" value="Up" class="btn btn-primary" />
                            </div>
                        }@using (Html.BeginForm("QuantityDown", "Pantry"))
                        {
                            <div class="quantityAdjustButton">
                                <input asp-for="@item.Id" type="hidden" value="@item.Id" name="id" class="form-control" />
                                <input type="submit" value="Down" class="btn btn-primary" />
                            </div>
                        }
                    </div>
                </td>
        </tr>
        }
    </tbody>
</table>